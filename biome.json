{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "formatter": { "enabled": false },
  "organizeImports": { "enabled": false },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      }
    },
    "ignore": [".next", "build", "next.config.mjs", "node_modules"]
  }
}
